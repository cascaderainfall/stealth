<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.cosmos.unreddit.util.DateUtil"/>
        <import type="android.graphics.Color"/>
        <variable
            name="post"
            type="com.cosmos.unreddit.post.PostEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Color for seen posts -->
        <TextView
            android:id="@+id/text_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{post.title}"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor='@{post.seen ? Color.parseColor("#7F7F7F") : Color.parseColor("#000000")}'
            tools:text="This is a post" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="text_subreddit, text_post_date, text_post_author,
            text_post_domain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_post_title"
            app:flow_horizontalStyle="packed"
            app:flow_horizontalGap="16dp"
            app:flow_horizontalBias="0"
            app:flow_verticalBias="0"
            app:flow_wrapMode="chain"/>

        <TextView
            android:id="@+id/text_subreddit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{post.subreddit}"
            tools:text="/r/reddit" />

        <TextView
            android:id="@+id/text_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{DateUtil.getTimeDifference(context, post.created)}"
            tools:text="5h"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{post.author}"
            tools:text="author"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_post_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{post.domain}"
            tools:text="reddit.com"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>